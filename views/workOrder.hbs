    <div class='table-title'>
      <h1>Work Order No: {{data.workOrderNo}}</h1>
      <h2>For {{data.companyName}}</h2></div>
      <h2>Date- {{dateFormat data.date}}</h2></div>
    <ol>
      {{#each data.product}}
        <li>
          <h3>Product Code: {{productCode}}</h3>
          <h3>Product Name: {{productName}}</h3>
          <h3>Quantity: {{qty}}</h3>


          {{#if (cheackAllMaterialType material "electronic")}}
          <table class='table-main'>
            <thead>
             <tr>
                <th>Material Name</th>
                <th>Material Type</th>
                <th>Description</th>
                <th>Each Quantity</th>
                <th>Req. Qty.</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              {{#each material}}
                {{#if (checkMaterial material.materialType "electronic")}}
                  <tr>
                  <td>{{material.name}}</td>
                  <td>{{material.materialType}}</td>
                  <td>{{material.description}}</td>
                  <td>{{qty}} {{material.unit}}</td>
                  <td> {{../qty}} </td>
                  <td>{{qty}} X {{../qty}} = {{ multiply ../qty qty }} {{material.unit}}</td>
                </tr>
                {{/if}}
              {{/each}}
            </tbody>
          </table>
          {{/if}}

